                                <CheckBox Content="Фильтр Организаций " FontSize="12pt" Style="{DynamicResource CheckBoxStyle1}" x:Name="orgs_fiter" Checked="orgs_fiter_Checked" Unchecked="orgs_fiter_Unchecked"/>
