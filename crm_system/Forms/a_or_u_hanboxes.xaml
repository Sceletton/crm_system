<Window x:Class="crm_system.a_or_u_hanboxes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:crm_system"
        mc:Ignorable="d"
        Title="" Height="180" Width="260" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Canvas>
            <StackPanel Margin="30">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Значение:" FontSize="12pt" Margin="0,0,20,0"/>
                    <TextBox Name="value" Style="{DynamicResource TextBoxStyle}"  FontSize="12pt"/>
                </StackPanel>
                <Button Name="save" Style="{DynamicResource DefaultBtn}" Content="Сохранить" FontSize="12pt" Width="140" Height="40" Click="save_Click"/>
            </StackPanel>
        </Canvas>
    </Grid>
</Window>
